
<div class="span9 content">
  <%= create_guide("New Gallery", 
        "Enter the gallery's particulars: <b>title</b> and <b>description</b>.").html_safe %>
  
  <%= create_breadcrumb(@breadcrumbs).html_safe %>
  
  <div class="row-fluid">
    <div class="span8">

      <%= simple_form_for( @new_gallery  ,:url => galleries_url , :html => {:class => "form-horizontal"} ) do |f| %>
        <%= f.input :title, :label => "Gallery's title", 
                :input_html => {:class => "span10"}    %>
        <%= f.input :description, :hint => "Description of the gallery", 
                :input_html => { :rows => '5', :class => "span10"} %>
        <%#= f.input :email, :placeholder => 'user@domain.com' %>
        <div class="form-actions">
          <%= f.button :submit, :class => "btn btn-primary" %>
        </div>
      <% end %>
      
      
     
      
      

    </div><!--/span-->

    <div class="span4">
      <table cellpadding="0" cellspacing="0" border="0" 
            class="table table-striped table-bordered" id="example">
        <thead>
          <tr><th>Total Galleries: <%= @galleries.count %></th></tr>
        </thead>
      </table>
      
    </div><!--/span-->
    
  </div><!--/row-->

</div><!--/span-->
